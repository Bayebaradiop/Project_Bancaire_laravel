# ==========================================
# Variables d'environnement pour Render
# ==========================================
# IMPORTANT : Ces variables sont automatiquement configurées via render.yaml
# Vous n'avez PAS besoin de les copier manuellement !
# Render injectera automatiquement les variables de base de données

# ==========================================
# Application
# ==========================================
APP_NAME="Project Bancaire Laravel"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://project-bancaire-laravel.onrender.com

# La clé APP_KEY sera générée automatiquement par Render (voir render.yaml)
# Si vous voulez utiliser votre clé actuelle, décommentez ci-dessous :
# APP_KEY=base64:/0NHaUg5A+twwjwa45GPqJM7IlYU5S+dfiQDcGGw2xk=

# ==========================================
# Base de données PostgreSQL
# ==========================================
# Ces variables sont automatiquement injectées par render.yaml
# depuis la base de données PostgreSQL créée par Render
# DB_CONNECTION=pgsql
# DB_HOST=<auto-généré par Render>
# DB_PORT=<auto-généré par Render>
# DB_DATABASE=<auto-généré par Render>
# DB_USERNAME=<auto-généré par Render>
# DB_PASSWORD=<auto-généré par Render>

# ==========================================
# Cache & Sessions
# ==========================================
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
SESSION_DRIVER=file
SESSION_LIFETIME=120

BROADCAST_DRIVER=log

# ==========================================
# Logging (Optimisé pour Render)
# ==========================================
LOG_CHANNEL=stderr
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=info

# ==========================================
# CORS & Sanctum (API Authentication)
# ==========================================
# Décommentez et configurez avec votre URL Render :
# SESSION_DOMAIN=.onrender.com
# SANCTUM_STATEFUL_DOMAINS=votre-app.onrender.com

# ==========================================
# Redis (Optionnel - Plan payant Render)
# ==========================================
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379

# ==========================================
# Mail (À configurer selon votre service)
# ==========================================
# Exemples de services : Mailtrap, SendGrid, Mailgun, AWS SES
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# ==========================================
# AWS (Si vous utilisez S3 pour le stockage)
# ==========================================
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=
# AWS_USE_PATH_STYLE_ENDPOINT=false

# ==========================================
# Pusher (Broadcasting temps réel)
# ==========================================
# PUSHER_APP_ID=
# PUSHER_APP_KEY=
# PUSHER_APP_SECRET=
# PUSHER_HOST=
# PUSHER_PORT=443
# PUSHER_SCHEME=https
# PUSHER_APP_CLUSTER=mt1

# ==========================================
# Swagger Documentation
# ==========================================
# ==========================================
# Swagger / OpenAPI Documentation
# ==========================================
L5_SWAGGER_GENERATE_ALWAYS=true
L5_SWAGGER_USE_ABSOLUTE_PATH=true
L5_SWAGGER_BASE_PATH=/docs
L5_SWAGGER_CONST_HOST=https://project-bancaire-laravel.onrender.com

# ==========================================
# Timezone
# ==========================================
APP_TIMEZONE=UTC

# ==========================================
# Vite (Frontend assets - si nécessaire)
# ==========================================
# VITE_APP_NAME="${APP_NAME}"
# VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
# VITE_PUSHER_HOST="${PUSHER_HOST}"
# VITE_PUSHER_PORT="${PUSHER_PORT}"
# VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
# VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"
